<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?> <!-- Giữ lại import cho Tab, TabPane, Spinner -->
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="warehouseManagementPane" prefHeight="700.0" prefWidth="950.0" style="-fx-background-color: #EBF8FF;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.stores.controller.WarehouseManagementController">
    <children>
        <VBox spacing="15.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <Label text="%warehouse.management.title" textFill="#2C5282"> <!-- KEY -->
                    <font><Font name="System Bold" size="24.0" /></font>
                </Label>
                <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                    <tabs>
                        <Tab fx:id="tabManageWarehouses" text="%tab.manageWarehouses"> <!-- KEY -->
                            <content>
                                <BorderPane>
                                    <center>
                                        <TableView fx:id="warehouseTableView">
                                            <columns>
                                                <TableColumn fx:id="colWarehouseID" text="%table.col.warehouseId" /> <!-- KEY -->
                                                <TableColumn fx:id="colWarehouseName" text="%table.col.warehouseName" /> <!-- KEY -->
                                                <TableColumn fx:id="colWarehouseAddress" text="%table.col.address" /> <!-- KEY -->
                                                <TableColumn fx:id="colWarehousePhone" text="%table.col.phone" /> <!-- KEY -->
                                                <TableColumn fx:id="colWarehouseManager" text="%table.col.warehouseManager" /> <!-- KEY -->
                                            </columns>
                                            <placeholder><Label text="%table.placeholder.noWarehouses" /></placeholder> <!-- KEY -->
                                            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                                        </TableView>
                                    </center>
                                    <right>
                                        <VBox spacing="10.0" prefWidth="300.0" style="-fx-border-color: #CBD5E0; -fx-border-width: 0 0 0 1; -fx-padding: 10;">
                                            <Label text="%label.warehouseInfo" style="-fx-font-size: 16px; -fx-font-weight: bold;" /> <!-- KEY -->
                                            <GridPane hgap="10.0" vgap="8.0">
                                                <!-- ... columnConstraints, rowConstraints ... -->
                                                <children>
                                                    <Label text="%label.warehouseId" /> <!-- KEY -->
                                                    <TextField fx:id="txtWarehouseID" editable="false" promptText="%prompt.autoGenerated" GridPane.columnIndex="1" /> <!-- KEY -->
                                                    <Label text="%label.warehouseName" GridPane.rowIndex="1" /> <!-- KEY -->
                                                    <TextField fx:id="txtWarehouseName" promptText="%prompt.warehouseName" GridPane.columnIndex="1" GridPane.rowIndex="1" /> <!-- KEY -->
                                                    <Label text="%label.address" GridPane.rowIndex="2" /> <!-- KEY -->
                                                    <TextField fx:id="txtWarehouseAddress" promptText="%prompt.address" GridPane.columnIndex="1" GridPane.rowIndex="2" /> <!-- KEY -->
                                                    <Label text="%label.phone" GridPane.rowIndex="3" /> <!-- KEY -->
                                                    <TextField fx:id="txtWarehousePhone" promptText="%prompt.phone" GridPane.columnIndex="1" GridPane.rowIndex="3" /> <!-- KEY -->
                                                    <Label text="%label.managerId" GridPane.rowIndex="4" /> <!-- KEY -->
                                                    <ComboBox fx:id="cmbWarehouseManager" prefWidth="180.0" promptText="%prompt.selectManagerOptional" GridPane.columnIndex="1" GridPane.rowIndex="4" /> <!-- KEY -->
                                                </children>
                                            </GridPane>
                                            <HBox spacing="10.0" alignment="CENTER_RIGHT">
                                                <Button fx:id="btnAddWarehouse" mnemonicParsing="false" onAction="#handleAddWarehouseAction" text="%button.addWarehouse" /> <!-- KEY -->
                                                <Button fx:id="btnUpdateWarehouse" mnemonicParsing="false" onAction="#handleUpdateWarehouseAction" text="%button.updateWarehouse" /> <!-- KEY -->
                                                <Button fx:id="btnDeleteWarehouse" mnemonicParsing="false" onAction="#handleDeleteWarehouseAction" text="%button.deleteWarehouse" /> <!-- KEY -->
                                                <Button fx:id="btnClearWarehouseForm" mnemonicParsing="false" onAction="#handleClearWarehouseFormAction" text="%button.clear" /> <!-- KEY -->
                                            </HBox>
                                            <Label fx:id="lblWarehouseStatus" wrapText="true"/>
                                        </VBox>
                                    </right>
                                </BorderPane>
                            </content>
                        </Tab>
                        <Tab fx:id="tabManageInventory" text="%tab.manageInventory"> <!-- KEY -->
                            <content>
                                <BorderPane>
                                    <top>
                                        <HBox spacing="10.0" alignment="CENTER_LEFT" style="-fx-padding: 10px;">
                                            <Label text="%label.filterByWarehouse" /> <!-- KEY -->
                                            <ComboBox fx:id="cmbFilterInventoryByWarehouse" prefWidth="200.0" promptText="%prompt.allWarehouses" /> <!-- KEY -->
                                            <Label text="%label.filterByProduct" /> <!-- KEY -->
                                            <TextField fx:id="txtFilterInventoryByProduct" prefWidth="200.0" promptText="%search.prompt.productOrId" /> <!-- KEY -->
                                            <Button fx:id="btnFilterInventory" mnemonicParsing="false" onAction="#handleFilterInventoryAction" text="%button.filterInventory" /> <!-- KEY -->
                                            <Button fx:id="btnRefreshInventoryTable" mnemonicParsing="false" onAction="#handleRefreshInventoryTableAction" text="%button.refreshTable" /> <!-- KEY -->
                                        </HBox>
                                    </top>
                                    <center>
                                        <TableView fx:id="inventoryTableView">
                                            <columns>
                                                <TableColumn fx:id="colInventoryID" text="%table.col.inventoryId" /> <!-- KEY -->
                                                <TableColumn fx:id="colInventoryWarehouseName" text="%table.col.warehouseName" /> <!-- KEY -->
                                                <TableColumn fx:id="colInventoryProductName" text="%table.col.productName" /> <!-- KEY -->
                                                <TableColumn fx:id="colInventoryQuantity" text="%table.col.quantity" /> <!-- KEY -->
                                                <TableColumn fx:id="colInventoryProductStatus" text="%table.col.productStatus" /> <!-- KEY -->
                                                <TableColumn fx:id="colInventoryLastUpdate" text="%table.col.lastUpdate" /> <!-- KEY -->
                                                <TableColumn fx:id="colInventoryAdjust" text="%table.col.adjustQuantity" /> <!-- KEY -->
                                            </columns>
                                            <placeholder><Label text="%table.placeholder.noInventory" /></placeholder> <!-- KEY -->
                                            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                                        </TableView>
                                    </center>
                                </BorderPane>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </children>
        </VBox>
    </children>
</AnchorPane>